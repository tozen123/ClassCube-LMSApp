<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/todoclassitem"
    android:layout_marginTop="20dp"
    android:layout_margin="5dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="1dp"
    android:backgroundTint="#FFAF26"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        >
        <TextView
            android:id="@+id/TclassPostTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="classPostTitle"
            android:textSize="18sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/TclassPostDuedate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="classPostDueDate"
            android:textSize="14sp"
            android:layout_below="@+id/TclassPostTitle"
            />
        <TextView
            android:id="@+id/TclassPostSubject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="classPostSubject"
            android:textSize="14sp"
            android:layout_below="@+id/TclassPostDuedate"
            />
    </RelativeLayout>
</androidx.cardview.widget.CardView>