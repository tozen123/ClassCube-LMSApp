<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/idClassActivityPostItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="6dp"
    android:backgroundTint="#FFAF26"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="vertical"
        android:padding="4dp"

        >

        <TextView
            android:id="@+id/id_textview_classActivityPostTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="classActivityPostTitle"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/id_textview_classActivityPostSubject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="classActivityPostSubject"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/id_textview_classActivityPostDuedate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="classActivityPostDuedate"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/id_textview_classActivityPostStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:textStyle="bold"
            android:layout_marginStart="12dp"
            android:text="%completionStatus%"
            android:textSize="18sp"
            android:textColor="#000000" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
