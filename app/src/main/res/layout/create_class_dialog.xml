<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/header_rounded_bg"
    android:padding="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Class"
            android:textColor="@color/MAIN_COLOR"
            android:textStyle="bold"
            android:textSize="26sp">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Class Code is OPTIONAL. If it leave as blank, the system will automatically generate unique random code."
            android:textStyle="italic"
            android:textSize="14sp"
            android:layout_marginTop="8dp">
        </TextView>
        <EditText
            android:id="@+id/edt_className_create"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/input_layout"
            android:backgroundTint="@color/MAIN_COLOR"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"

            android:textSize="16sp"
            android:layout_marginTop="12dp"
            android:hint="Enter Class Name"/>

        <EditText
            android:id="@+id/edt_classCode_create"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/input_layout"
            android:backgroundTint="@color/MAIN_COLOR"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"

            android:textSize="16sp"
            android:layout_marginTop="12dp"
            android:hint="Enter Class Code"/>

        <EditText
            android:id="@+id/edt_classSubject_create"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/input_layout"
            android:backgroundTint="@color/MAIN_COLOR"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"

            android:textSize="16sp"
            android:layout_marginTop="12dp"
            android:hint="Enter Class Subject"/>
    </LinearLayout>



</FrameLayout>