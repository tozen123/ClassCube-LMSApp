<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/classItemId"
    android:layout_marginTop="25dp"
    android:layout_margin="5dp"
    app:cardCornerRadius="9dp"
    app:cardElevation="7dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="2dp"
        android:padding="6dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="1"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Class Name: "
                android:textSize="12sp"
                android:layout_weight="0.3"
                />

            <TextView
                android:id="@+id/classNameValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="className"
                android:textColor="#ff396e"
                android:textStyle="bold"
                android:textSize="24sp"
                android:layout_weight="0.5"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:weightSum="1"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Class Subject: "
                android:textSize="12sp"
                android:layout_weight="0.245"
                />

            <TextView
                android:id="@+id/classSubjectValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="classSubject"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_weight="0.5"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:weightSum="1"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Class Code: "
                android:textSize="12sp"
                android:layout_weight="0.238"
                />

            <TextView
                android:id="@+id/classCodeValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="classCode"
                android:textSize="12sp"
                android:layout_weight="0.5"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="1"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Class Teacher: "
                android:textSize="12sp"
                android:layout_weight="0.205"
                />

            <TextView
                android:id="@+id/classTeacherNameValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="classTeacher"
                android:textSize="12sp"
                android:layout_weight="0.5"
                />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>